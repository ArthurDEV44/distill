{
  "name": "@ctxopt/mcp-server",
  "version": "0.1.0",
  "description": "MCP Server for CtxOpt - Context Engineering Optimizer",
  "type": "module",
  "bin": {
    "ctxopt-mcp": "./bin/cli.js"
  },
  "main": "./dist/index.js",
